{
  "globals": {
    "jQuery": true,
    "$": true,
    "describe": false,
    "it": false,
    "expect": false,
    "$on": false,
    "beforeEach": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb/base",
  "rules": {
//    TODO try to remove rules applicable only for the old SWE scripts like form, autocomplete
    "indent": 0,
    "func-names": 0,
    "no-var": 0,
    "no-mixed-operators" :0,
    "func-style": 0,
    "space-unary-ops": 0,
    "padded-blocks": 0,
    "comma-dangle": 0,
    "valid-jsdoc": 0,
    "no-sequences": 0,
    "no-multi-spaces": 0,
    "no-param-reassign":0,
    "prefer-rest-params":0,
    "vars-on-top": 0,
    "max-depth": [2, 6],
    "eol-last": 0,
    "space-infix-ops" : 1,
    "no-shadow": 0,
    "operator-assignment" : 0,
    "no-else-return": 0,
    "wrap-iife": [2, "any"],
    "no-useless-concat": 0,
    "space-before-function-paren": 0,
    "key-spacing": 0,
    "consistent-return": 0,
    "id-match": 0,
    "spaced-comment": 0,
    "import/newline-after-import": 0,
    "one-var": 0,
    "strict": 0,
    "default-case" : 0,
    "no-unused-expressions" : 0,
    "space-in-parens": 0,
    "space-before-blocks":0,
    "computed-property-spacing":0,
    "max-len": 0,
    "quote-props": 0,
    "comma-spacing":0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "babel/object-shorthand": 0
  }
}